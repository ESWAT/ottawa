/*------------------------------------*\
    #VARIABLES
\*------------------------------------*/

cBlack    = #000
cGreyDark = #111
cGrey     = #bbb
cWhite    = #fff
cRed      = #f00
zModal    = 9





/*------------------------------------*\
    #ELEMENTS
\*------------------------------------*/

*
  box-sizing: border-box


html
  height: 100%
  font: 400 13px/20px ff-schulbuch-nord-web, 'helvetica neue', arial, sans-serif
  -webkit-font-smoothing: antialiased


body
  padding: 0
  margin: 0
  height: 100%
  background: cBlack
  color: cWhite


h1
  margin: 0





/*------------------------------------*\
    #PRIMER
\*------------------------------------*/

.primer
  padding: 10px
  height: 75px
  padding-top: 25px
  text-align: center


.primer--title
  font-size: 24px
  font-weight: 700
  letter-spacing: 0.5px
  text-transform: uppercase


.primer--sub-title
  font-size: 18px
  font-weight: 400
  color: cGrey
  margin-top: 10px


.inex-logo
  position: absolute
  top: 28px
  left: 10px
  font-size: 75px
  line-height: 0
  margin: 0 auto
  color: cWhite


.calendar-link
  color: cWhite
  text-decoration: none
  font-size: 11px
  font-weight: bold
  text-transform: uppercase
  position: absolute
  right: 10px
  top: 40px

  &:hover
    color: cRed





/*------------------------------------*\
    #CALENDAR
\*------------------------------------*/

.calendar-shell
  margin-top: 20px
  padding: 10px
  height: calc(100% - 95px)


.calendar,
.week
  table-layout: fixed
  width: 100%
  height: 100%
  border-collapse: collapse


.days-of-week
  position: relative
  top: 3px


.days-of-week--label
  text-transform: uppercase
  text-align: right
  font-size: 11px
  padding: 0 10px


.week-wrap:first-of-type
  border-top: 1px solid cGreyDark


.week
  position: relative
  margin-top: -1px


.day
  border: 1px solid cGreyDark
  border-top: 0
  padding: 10px
  vertical-align: top


.day-label
  font-size: 13px
  color: cWhite
  margin: 0
  float: right


.day--today

  .day-label
    color: cRed


.day--outside
  background: rgba(cGreyDark, .5)


.event
  position: relative


.event__label
  font-weight: 400
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis
  margin: 0 0 5px
  clear: both

  &:hover
    color: cRed
    cursor: pointer


.event__time
  font-weight: 600


.event-details
  position: absolute
  top: 0
  left: 0
  width: 300px
  padding: 10px
  background-color: rgba(cBlack, 0.9)
  border: 1px solid cGreyDark
  z-index: zModal


.event-details__title
  margin: 0
  font-size: 16px


.event-details__description
  max-height: 300px
  margin: 0
  overflow-y: scroll
  overflow-x: hidden





/*------------------------------------*\
    #MODIFIERS
\*------------------------------------*/

.hidden
  display: none !important
